// andreclosepractico.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "math.h"

using namespace std;

int main ()
{int i, n,s;
 cout<<"Ingresar numero de terminos";
 cin>>n;
 s=0;
 for(i=1;i<=n;i++)
 {s=s+i;
 }
  cout<<s;
	return 0;
}


// andreclosepractico.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "math.h"

using namespace std;

int main ()
{int i, n,s;
 cout<<"Ingresar numero de terminos";
 cin>>n;
 s=0;
 for(i=1;i<=n;i++)
 {s=s+powf(i,2);
 }
  cout<<s;
	return 0;
}

// andreclosepractico.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "math.h"

using namespace std;

int main ()
{int i, n,s,x;
 cout<<"Ingresar numero de terminos";
 cin>>n;
 cout<<"Ingresar x";
 cin>>x;
 s=0;
 for(i=1;i<=n;i++)
 {s=s+ powf(x,i);
 }
  cout<<s;
	return 0;
}

