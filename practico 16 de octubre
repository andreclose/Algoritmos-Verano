#include "stdafx.h"
#include <iostream>
#include "math.h"

using namespace std;
int _tmain(int argc, _TCHAR* argv[])
{int j,fac,i,n;
 float x,s,p;
 cin>>x;
 cin>>n;
    s=0;
    for(j=1;j<=n;j=j+1)
    {fac=1;
     for(i=1;i<=2*j;i++)
     {fac=fac*i;
     }
     p=powf(x,2*j);
     p=p/fac;
     s=s+p;
    }
    s=s+5;
    cout<<s;
    return 0;
}
